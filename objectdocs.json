{
  "meta": {
    "title": "ObjectStack Docs",
    "description": "Enterprise-grade low-code platform documentation",
    "url": "https://docs.objectstack.ai",
    "favicon": "/favicon.ico"
  },
  "i18n": {
    "enabled": true,
    "defaultLanguage": "en",
    "languages": [
      { "code": "en", "name": "English" },
      { "code": "cn", "name": "简体中文" }
    ]
  },
  "branding": {
    "logo": {
      "text": "ObjectStack"
    },
    "theme": {
      "accentColor": "blue", 
      "radius": "0.5rem"
    }
  },
  "layout": {
    "navbar": {
      "enabled": true,
      "transparentMode": "top",
      "links": [
        {
          "text": "Home",
          "url": "https://www.objectstack.ai",
          "external": true
        }
      ],
      "socials": [
        { "platform": "github", "url": "https://github.com/objectstack-ai/" }
      ]
    },
    "sidebar": {
      "enabled": true,
      "prefetch": true,
      "defaultOpenLevel": 1,
      "collapsible": true,
      "tabs": []
    },
    "toc": {
      "enabled": true,
      "depth": 3
    },
    "footer": {
      "enabled": false,
      "copyright": "© 2026 ObjectStack Inc."
    }
  },
  "page": {
    "showLastUpdate": true,
    "showEditLink": true,
    "repoBaseUrl": "https://github.com/objectstack-ai/docs"
  },
  "content": {
    "math": false,
    "imageZoom": true,
    "codeBlock": {
      "theme": "vesper",
      "showLineNumbers": true
    }
  }
}
